@model GAMF_.Models.Student

@{
    ViewData["Title"] = "Részletek";
}

<h2>Részletek</h2>

<div>
    <h4>Hallgatók</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstMidName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstMidName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EnrollmentDate)
        </dd>
        <dd>
            <table class="table">
                   <tr>
                       <th>
                           @Html.DisplayNameFor(model => model.Enrollments.First().Course.Title)
                       </th>
                       <th>
                           @Html.DisplayNameFor(model => model.Enrollments.First().Grade)
                       </th>
                   </tr>
                @foreach(var item in Model.Enrollments)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Course.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                    }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Szerkesztés</a> |
    <a asp-action="Index">Vissza a listához</a>
</div>
