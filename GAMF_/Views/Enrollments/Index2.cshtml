@model EnrollmentListVM
@{
    ViewData["Title"] = "Jelentkezések adattábla megtekintéssel";
}

<h2>Jelentkezések 2</h2>

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover" id="dtEnrollments"></table>
    </div>
</div>

@section scripts{ 
    <script type="text/javascript">
        $(document).ready(function () {
            $('#dtEnrollments').dataTable({
                ajax: {
                    url: '@Url.Action("GetEnrollments", "Enrollments")',
                    dataSrc: function (data) {
                        if (data != null) {
                            return data;
                        }
                    }
                },
                columns: [
                    {
                        data: "courseTitle",
                        title: '@Html.DisplayNameFor(model => model.CourseTitle)'
                    },
                    {
                        data: "studentFullName",
                        title: '@Html.DisplayNameFor(model => model.StudentFullName)'
                    },
                    {
                        data: "grade",
                        title: '@Html.DisplayNameFor(model => model.Grade)'
                    }
                ]
            });
        });

    </script>
}